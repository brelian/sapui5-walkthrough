<mvc:View
        controllerName="com.0x400.demo.controller.App"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc">
    <Button text="{i18n>showHelloButtonText}" press=".onSayHello" />
    <Input
        value="{/recipient/firstName}"
        description="{/recipient/firstName}"
        valueLiveUpdate="true"
        width="30%" />
    <Input
            value="{/recipient/lastName}"
            description="Hello {/recipient/lastName}"
            valueLiveUpdate="true"
            width="30%" />
</mvc:View>
