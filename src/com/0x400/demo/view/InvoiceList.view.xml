<mvc:View
        controllerName="com.0x400.demo.controller.InvoiceList"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc">
    <List
            id="invoiceList"
            class="sapUiResponsiveMargin"
            width="auto"
            items="{
                path: 'invoice>/Invoices',
                sorter: {
                    path: 'ShipperName',
                    group: true
                }
            }" >
        <headerToolbar>
            <Toolbar>
                <Title text="{i18n>invoiceListTitle}" />
                <ToolbarSpacer />
                <SearchField width="40%" search=".onFilterInvoices" />
            </Toolbar>
        </headerToolbar>
        <items>
            <ObjectListItem
                    title="{invoice>Quantity} x {invoice>ProductName}"
                    number="{
                        parts: [{path: 'invoice>ExtendedPrice'}, {path: 'root>/currency'}],
                        type: 'sap.ui.model.type.Currency',
                        formatOptions: {
                            showMeasure: false
                        }
                    }"
                    numberState="{= ${invoice>ExtendedPrice} > 50 ? 'Error' : 'Success' }"
                    numberUnit="{root>/currency}">
                <firstStatus>
                    <ObjectStatus text="{
                        path: 'invoice>Status',
                        formatter: '.formatter.statusText'
                    }" />
                </firstStatus>
            </ObjectListItem>
        </items>
    </List>
</mvc:View>
